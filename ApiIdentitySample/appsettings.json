{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source={Server};Initial Catalog={Database};Integrated Security=True;Connect Timeout=60;Encrypt=True;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
  },
  "IdentityOptions": {
    "MinPasswordLenght": 4,
    "Issuer": "ApiIdentitySample"
  },
  "SendGrid": {
    "ApiKey": "{yourkey}"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "{domain}",
    "TenantId": "{Tenant}",
    "ClientId": "{Client Id - App ID}",
    "Audience": "{Client Id - App ID}",
    "CallbackPath": "/signin-microsoft",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  }
}
